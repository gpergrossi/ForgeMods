package dev.mortus.cells;

import java.util.Random;

import dev.mortus.util.math.func2d.Function2D;

public class Func2DVoronoi implements Function2D {

	InfiniteVoronoi voronoi;
	
	public Func2DVoronoi(int chunkSize, long seed) {
		this.voronoi = new InfiniteVoronoi(chunkSize, seed, 32);
	}

	@Override
	public double getValue(double x, double y) {
		InfiniteVoronoi.Cell cell = this.voronoi.getCell(x, y);
		Random r = new Random(cell.seed);
		return r.nextDouble();
	}
	
	
	
}
